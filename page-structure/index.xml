<?xml version="1.0" encoding="UTF-8"?>
<!-- 
  {IoTBay Homepage Structure}
  {Container-Centric Design with Bento Grid System}
  {Purpose: Document homepage layout, component hierarchy, and visual grouping}
-->
<page name="index" type="homepage" jsp-file="index.jsp">
  
  <metadata>
    <title>IoTBay - IoT Device Marketplace</title>
    <description>Homepage for IoTBay e-commerce platform</description>
    <route>/</route>
    <template>t:base</template>
  </metadata>

  <layout-system>
    <container>l-container</container>
    <spacing-base>8px</spacing-base>
    <grid-system>12-column (l-grid)</grid-system>
  </layout-system>

  <structure>
    
    <!-- {Header Organism} -->
    <section name="header" component="organisms/header/header.jsp" class="header" z-index="var(--z-header)">
      <components>
        <logo component="atoms/icon" class="header__brand"/>
        <navigation component="molecules/navigation-item" class="header__nav"/>
        <search component="molecules/search-form" class="header__search" z-index="var(--z-dropdown)"/>
        <cart-icon component="atoms/icon" class="header__cart-link"/>
        <user-menu component="molecules/dropdown" class="header__user-menu" z-index="var(--z-dropdown)"/>
      </components>
    </section>

    <!-- {Hero Section} -->
    <section name="hero" class="section-container section-container--white">
      <container class="l-container">
        <content class="section-container__header">
          <title class="section-container__title">{Welcome to IoTBay}</title>
          <description class="section-container__description">{Value proposition}</description>
          <actions>
            <button component="atoms/button" type="primary" route="/browse" text="Browse Products"/>
            <button component="atoms/button" type="outline" route="/about" text="Learn More"/>
          </actions>
        </content>
      </container>
    </section>

    <!-- {Category Grid} -->
    <section name="categories" class="section-container">
      <container class="l-container">
        <component-size>
          <container-width>max-width: 1400px</container-width>
          <padding>32px (8px × 4) responsive</padding>
        </component-size>
        <grid class="l-grid l-grid--gap-medium">
          <grid-structure>
            <design>4-column grid for category cards</design>
            <mobile>1 column (l-grid__col-12)</mobile>
            <tablet>2 columns (l-grid__col-md-6)</tablet>
            <desktop>4 columns (l-grid__col-lg-3)</desktop>
            <gap>24px (8px × 3) between cards</gap>
          </grid-structure>
          <category-card class="l-grid__col-12 l-grid__col-md-6 l-grid__col-lg-3">
            <component-size>
              <width>Mobile: 100%, Tablet: 50%, Desktop: 25% (3 columns)</width>
              <height>200px (fixed height for consistency)</height>
              <padding>24px</padding>
              <border-radius>8px</border-radius>
            </component-size>
            <card class="c-product-card">
              <image class="c-product-card__image"/>
              <body class="c-product-card__body">
                <title class="c-product-card__title">{Category Name}</title>
                <link route="/category-{name}"/>
              </body>
            </card>
          </category-card>
        </grid>
      </container>
    </section>

    <!-- {Featured Products: Bento Grid} -->
    <section name="featured-products" class="section-container section-container--white">
      <container class="l-container">
        <header class="section-container__header">
          <title class="section-container__title">Featured IoT Products</title>
          <description class="section-container__description">Handpicked devices for professionals</description>
        </header>
        
        <!-- {Skeleton Loading State} -->
        <skeleton-loading id="featured-products-skeleton" class="l-grid l-grid--gap-medium hidden">
          <skeleton component="atoms/skeleton" type="card" class="l-grid__col-12 l-grid__col-md-6 l-grid__col-lg-3"/>
        </skeleton-loading>
        
        <!-- {Product Grid} -->
        <product-grid id="featured-products-grid" class="l-grid l-grid--gap-medium">
          <grid-structure>
            <design>4-column Bento Grid for featured products</design>
            <mobile>1 column (l-grid__col-12), card width: 100%</mobile>
            <tablet>2 columns (l-grid__col-md-6), card width: calc(50% - 12px)</tablet>
            <desktop>4 columns (l-grid__col-lg-3), card width: calc(25% - 18px)</desktop>
            <gap>24px (8px × 3) between cards</gap>
          </grid-structure>
          <product-card class="l-grid__col-12 l-grid__col-md-6 l-grid__col-lg-3">
            <component-size>
              <width>Mobile: 100%, Tablet: calc(50% - 12px), Desktop: calc(25% - 18px)</width>
              <min-height>320px</min-height>
              <padding>16px</padding>
              <border-radius>8px</border-radius>
              <box-shadow>0 2px 8px rgba(0,0,0,0.08)</box-shadow>
            </component-size>
            <card class="c-product-card">
              <image class="c-product-card__image">
                <component-size>
                  <width>100%</width>
                  <height>180px (aspect ratio: 16:9)</height>
                  <object-fit>cover</object-fit>
                </component-size>
              </image>
              <body class="c-product-card__body">
                <component-size>
                  <padding>16px</padding>
                  <gap>8px between elements</gap>
                </component-size>
                <title class="c-product-card__title">{product.name}</title>
                <price class="c-product-card__price">${price}</price>
                <actions class="c-product-card__actions">
                  <component-size>
                    <button-height>36px</button-height>
                    <gap>8px between buttons</gap>
                  </component-size>
                  <button component="atoms/button" type="outline" text="View Details"/>
                  <button component="atoms/button" type="primary" action="addToCart" optimistic-ui="true"/>
                </actions>
              </body>
            </card>
          </product-card>
        </product-grid>
      </container>
    </section>

    <!-- {Footer Organism} -->
    <section name="footer" component="organisms/footer/footer.jsp" class="footer" z-index="var(--z-footer)">
      <structure>
        <brand-column class="footer__column--brand">
          <logo class="footer__brand"/>
          <description class="footer__brand-description"/>
          <contact class="footer__contact"/>
          <social class="footer__social"/>
        </brand-column>
        <doormat-nav class="footer__column">
          <title>Shop</title>
          <links>Home, Browse Products, Categories, Featured, New Arrivals</links>
        </doormat-nav>
        <utility-links class="footer__column">
          <title>Customer Service</title>
          <links>Contact Us, Help Center, Shipping Info, Returns, FAQ</links>
        </utility-links>
        <secondary-tasks class="footer__column">
          <title>About</title>
          <links>About Us, Careers, Blog, Partners, Developer Resources</links>
        </secondary-tasks>
        <legal class="footer__column">
          <title>Legal</title>
          <links>Privacy Policy, Terms of Service, Cookie Policy, Accessibility</links>
        </legal>
        <newsletter class="footer__newsletter">
          <form component="molecules/search-form"/>
        </newsletter>
        <bottom class="footer__bottom">
          <copyright class="footer__copyright"/>
          <legal-links class="footer__legal-links"/>
        </bottom>
      </structure>
    </section>

  </structure>

  <components>
    <atomic>
      <atom name="button" path="components/atoms/button/button.jsp"/>
      <atom name="icon" path="components/atoms/icon/icon.jsp"/>
      <atom name="skeleton" path="components/atoms/skeleton/skeleton.jsp"/>
    </atomic>
    <molecular>
      <molecule name="navigation-item" path="components/molecules/navigation-item/navigation-item.jsp"/>
      <molecule name="search-form" path="components/molecules/search-form/search-form.jsp"/>
      <molecule name="product-card" path="components/molecules/product-card/product-card.jsp"/>
    </molecular>
    <organism>
      <organism name="header" path="components/organisms/header/header.jsp"/>
      <organism name="footer" path="components/organisms/footer/footer.jsp"/>
    </organism>
  </components>

  <design-tokens>
    <spacing>8px grid (l-spacing-*: 8, 16, 24, 32, 48, 64px)</spacing>
    <grid>l-grid (12-column), l-grid__col-* (responsive: md, lg)</grid>
    <cards>c-card, c-product-card (elevated, bordered variants)</cards>
    <sections>section-container (white, bordered variants)</sections>
    <z-index>z-header: 310, z-footer: 320, z-dropdown: 100</z-index>
  </design-tokens>

</page>
